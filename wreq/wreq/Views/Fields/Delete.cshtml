@model wreq.Models.ViewModels.FieldViewModel

@{
    ViewBag.Title = @Resource.Delete;
}

<h2>@Resource.Delete</h2>

<h3>@Resource.DeleteConfirm</h3>
<div>
    <h4>@Resource.Field</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        @if (Model.CombCultureHeight != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.CombCultureHeight)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CombCultureHeight) @Resource.UnitMeter
            </dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.Area)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Area) @Resource.UnitMeter<sup>2</sup>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Longitude)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Longitude)&deg

        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Latitude)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Latitude)&deg
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Altitude)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Altitude) @Resource.UnitMeter

        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SoilTypeName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoilTypeName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IrrigationTypeName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IrrigationTypeName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="@Resource.Delete" class="btn btn-default" /> |
            @Html.ActionLink(Resource.Back, "Index")
        </div>
    }
</div>
